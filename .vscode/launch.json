    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Запустить",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [ { "name": "squid", "value": "clam" } ],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "clang build active file"
        },
        {
			"name": "(lldb) Подключить",
			"type": "cppdbg",
			"request": "attach",
			"program": "${workspaceFolder}/${fileBasenameNoExtension}",
			"processId": "${command:pickProcess}",
			"MIMode": "lldb"
		}
    ]
}
